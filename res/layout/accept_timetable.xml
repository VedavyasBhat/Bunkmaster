<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".AcceptTimeTable"
    android:background="@drawable/back2" >

    <TextView
        android:id="@+id/entertt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter the time table:" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/entertt"
        android:paddingTop="30dp" >
        
    <TableLayout
        android:id="@+id/tableLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="15dp"
        android:layout_below="@id/entertt" >

        <TableRow
            android:id="@+id/monday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Mon:" />
            
            <Spinner
                android:id="@+id/ttmon1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
            <Spinner
                android:id="@+id/ttmon2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
            <Spinner
                android:id="@+id/ttmon3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
            <Spinner
                android:id="@+id/ttmon4"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
            <Spinner
                android:id="@+id/ttmon5"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
            <Spinner
                android:id="@+id/ttmon6"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

        </TableRow>

        <TableRow
            android:id="@+id/tuesday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp">
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Tue:" />
            <Spinner
                android:id="@+id/tttue1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
            <Spinner
                android:id="@+id/tttue2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
            <Spinner
                android:id="@+id/tttue3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
            <Spinner
                android:id="@+id/tttue4"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
            <Spinner
                android:id="@+id/tttue5"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
            <Spinner
                android:id="@+id/tttue6"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
        </TableRow>

        <TableRow
            android:id="@+id/wednesday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp">
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Wed:" />
            <Spinner
                android:id="@+id/ttwed1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
            <Spinner
                android:id="@+id/ttwed2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
            <Spinner
                android:id="@+id/ttwed3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
            <Spinner
                android:id="@+id/ttwed4"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
            <Spinner
                android:id="@+id/ttwed5"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
            <Spinner
                android:id="@+id/ttwed6"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
        </TableRow>

        <TableRow
            android:id="@+id/thursday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp">
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Thu:" />
            <Spinner
                android:id="@+id/ttthu1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
            <Spinner
                android:id="@+id/ttthu2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
            <Spinner
                android:id="@+id/ttthu3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
            <Spinner
                android:id="@+id/ttthu4"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
            <Spinner
                android:id="@+id/ttthu5"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
            <Spinner
                android:id="@+id/ttthu6"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
        </TableRow>
        
        <TableRow
            android:id="@+id/friday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp">
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Fri:" />
            <Spinner
                android:id="@+id/ttfri1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
            <Spinner
                android:id="@+id/ttfri2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
            <Spinner
                android:id="@+id/ttfri3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
            <Spinner
                android:id="@+id/ttfri4"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
            <Spinner
                android:id="@+id/ttfri5"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
            <Spinner
                android:id="@+id/ttfri6"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
        </TableRow>
        
        <TableRow
            android:id="@+id/saturday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Sat:" />
            <Spinner
                android:id="@+id/ttsat1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
            <Spinner
                android:id="@+id/ttsat2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
            <Spinner
                android:id="@+id/ttsat3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
            <Spinner
                android:id="@+id/ttsat4"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
            <Spinner
                android:id="@+id/ttsat5"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
            <Spinner
                android:id="@+id/ttsat6"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
        </TableRow>
    </TableLayout>
    </HorizontalScrollView>

    <Button
        android:id="@+id/ttok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="@string/OK"
        android:onClick="done" />

</RelativeLayout>